@model dynamic
@{
    ViewBag.Title = "Memorable Password Generator";
}

<h2>Memorable Password Generator</h2>

<script src="../../Scripts/password-generator.js" type="text/javascript"></script>


<div class="grey-box" style="min-height: 400px;">



    <span>
        <label for="length">Length</label>
        <input type="text" value="15" name="length" />
    </span>

    <span class="ui-corner-all">
        <button onclick="$('#password').text(generatePassword($('[name=length]').val(),1));">
            Generate memorable password
        </button>
    </span>

    <div class="grey-box" style="margin-top:20px;">
        Password:
        <strong>
            <label id="password"></label>
        </strong>
    </div>


    <!-- <em>Source: 
    <a href="https://github.com/bermi/password-generator"></a></em> -->

</div>

